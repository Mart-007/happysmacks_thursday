                            android:textSize="29dp" />

                        <TextView
                            android:id="@+id/emojiObjects"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:onClick="toSmileyObjects"
